<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.praktikalistproducts.HelloController"
      spacing="10">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <HBox spacing="10" alignment="CENTER">
    <Label text="Источник данных:"/>
    <RadioButton text="PostgreSQL" fx:id="dbRadio" selected="true"/>
    <RadioButton text="MySQL" fx:id="fileRadio"/>
    <RadioButton text="Память" fx:id="ramRadio"/>
    <Button text="Применить" onAction="#changeDataSource"/>
  </HBox>

  <HBox spacing="10">
    <TableView fx:id="table" prefHeight="400" prefWidth="500">
      <columns>
        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
        <TableColumn fx:id="nameColumn" text="Название" prefWidth="150"/>
        <TableColumn fx:id="countColumn" text="Количество" prefWidth="80"/>
        <TableColumn fx:id="tagColumn" text="Тег" prefWidth="100"/>
        <TableColumn fx:id="statusColumn" text="Статус" prefWidth="120"/>
      </columns>
    </TableView>

    <VBox spacing="10" prefWidth="200">
      <Label text="Добавить/Изменить продукт"/>
      <TextField fx:id="nameField" promptText="Название"/>
      <TextField fx:id="countField" promptText="Количество"/>
      <TextField fx:id="tagField" promptText="Тег"/>
      <TextField fx:id="statusField" promptText="Статус"/>

      <Button fx:id="addButton" text="Добавить" maxWidth="Infinity"/>
      <Button fx:id="editButton" text="Изменить" maxWidth="Infinity"/>
      <Button fx:id="deleteButton" text="Удалить" maxWidth="Infinity"/>

      <Separator/>

      <ComboBox fx:id="tagFilterComboBox" promptText="Выберите тег"/>
      <Button fx:id="filterButton" text="Фильтровать по тегу" maxWidth="Infinity"/>
      <Button fx:id="clearFilterButton" text="Сбросить фильтр" maxWidth="Infinity"/>
    </VBox>
  </HBox>
</VBox>